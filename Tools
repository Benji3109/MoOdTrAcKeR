<body>
    <div class="container">
        <div class="card">
            <h1>Comment allez-vous aujourd'hui ?</h1>
            
            <label class="input-label">Votre pr√©nom</label>
            <input type="text" id="nameInput" class="input-field" placeholder="Entrez votre pr√©nom">

            <div class="moods-grid" id="moodButtons">
                <!-- Les humeurs seront ajout√©es ici via JavaScript -->
            </div>

            <button id="submitButton" class="submit-button" disabled>
                Valider
            </button>
        </div>

        <div id="historyContainer" class="card" style="display: none;">
            <h2>Historique des humeurs</h2>
            <div id="moodHistory">
                <!-- L'historique sera ajout√© ici via JavaScript -->
            </div>
        </div>
    </div>

    <script>
        const moods = [
            { emoji: "üòä", label: "Tr√®s bien" },
            { emoji: "üôÇ", label: "Neutre" },
            { emoji: "ü§î", label: "Ind√©cis" },
            { emoji: "üò§", label: "Frustr√©" },
            { emoji: "üò¢", label: "Malade" }
        ];

        let selectedMood = null;
        const moodHistory = [];

        // Cr√©ation des boutons d'humeur
        const moodButtonsContainer = document.getElementById('moodButtons');
        moods.forEach(mood => {
            const button = document.createElement('button');
            button.className = 'mood-button';
            button.innerHTML = `
                <div class="mood-emoji">${mood.emoji}</div>
                <div class="mood-label">${mood.label}</div>
            `;
            button.onclick = () => selectMood(mood, button);
            moodButtonsContainer.appendChild(button);
        });

        function selectMood(mood, selectedButton) {
            document.querySelectorAll('.mood-button').forEach(btn => {
                btn.className = 'mood-button';
            });
            
            selectedButton.className = 'mood-button selected';
            selectedMood = mood;
            
            updateSubmitButton();
        }

        const nameInput = document.getElementById('nameInput');
        const submitButton = document.getElementById('submitButton');
        const historyContainer = document.getElementById('historyContainer');
        const moodHistoryContainer = document.getElementById('moodHistory');

        nameInput.addEventListener('input', updateSubmitButton);

        function updateSubmitButton() {
            const name = nameInput.value.trim();
            submitButton.disabled = !(name && selectedMood);
        }

        function deleteMoodEntry(index) {
            moodHistory.splice(index, 1);
            updateHistory();
        }

        submitButton.onclick = () => {
            const name = nameInput.value.trim();
            if (name && selectedMood) {
                const newEntry = {
                    name: name,
                    mood: selectedMood
                };
                
                moodHistory.unshift(newEntry);
                updateHistory();
                
                nameInput.value = '';
                selectedMood = null;
                document.querySelectorAll('.mood-button').forEach(btn => {
                    btn.className = 'mood-button';
                });
                updateSubmitButton();
            }
        };

        function updateHistory() {
            if (moodHistory.length > 0) {
                historyContainer.style.display = 'block';
                moodHistoryContainer.innerHTML = moodHistory.map((entry, index) => `
                    <div class="history-item">
                        <div class="history-left">
                            <span class="history-emoji">${entry.mood.emoji}</span>
                            <span class="history-name">${entry.name}</span>
                            <span class="history-mood">${entry.mood.label}</span>
                        </div>
                        <button onclick="deleteMoodEntry(${index})" class="delete-button">
                            ‚ùå
                        </button>
                    </div>
                `).join('');
            } else {
                historyContainer.style.display = 'none';
            }
        }
    </script>
</body>
